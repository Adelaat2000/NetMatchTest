@model List<NetMatch.Logic.Models.OfferteClass>

@{
    ViewData["Title"] = "Offertes Overzicht";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">
                <i class="bi bi-file-earmark-text"></i> Offertes
            </h1>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Nieuwe Offerte
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Er zijn nog geen offertes aangemaakt.
            <a asp-action="Create" class="alert-link">Maak de eerste offerte aan</a>.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Naam</th>
                            <th class="text-end">Acties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var offerte in Model)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">#@offerte.Id</span></td>
                                <td><strong>@offerte.Name</strong></td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary" disabled>
                                        <i class="bi bi-eye"></i> Bekijken
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="mt-3 text-muted">
            <small>Totaal: <strong>@Model.Count</strong> offerte(s)</small>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss success message after 5 seconds
        setTimeout(function() {
            var alert = document.querySelector('.alert-success');
            if (alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 5000);
    </script>
}

