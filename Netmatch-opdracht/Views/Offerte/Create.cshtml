@model Netmatch_opdracht.Models.CreateOfferteViewModel

@{
    ViewData["Title"] = "Nieuwe Offerte Aanmaken";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-file-earmark-plus"></i> Nieuwe Offerte
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-4">
                            <label asp-for="OfferteNaam" class="form-label fw-bold"></label>
                            <input asp-for="OfferteNaam" 
                                   class="form-control form-control-lg" 
                                   placeholder="Bijv. Project Website Redesign"
                                   autofocus />
                            <span asp-validation-for="OfferteNaam" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> Geef een duidelijke naam voor deze offerte
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Offerte Aanmaken
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Terug naar overzicht
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title text-info">
                        <i class="bi bi-lightbulb"></i> Demo Informatie
                    </h6>
                    <p class="card-text small mb-0">
                        Deze demo toont de volledige clean architecture implementatie:
                    </p>
                    <ul class="small mb-0 mt-2">
                        <li>Dependency Injection (Controller → Service → Repository)</li>
                        <li>DTO mapping in de service laag</li>
                        <li>Database operaties via ADO.NET (zonder Entity Framework)</li>
                        <li>Model validatie met Data Annotations</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

