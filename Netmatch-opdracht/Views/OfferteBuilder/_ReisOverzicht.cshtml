@model Netmatch_opdracht.Models.ViewModels.OfferteBuilderViewModel
@using System.Linq

<div class="p-3">
    <h6 class="fw-bold mb-3">Reisoverzicht</h6>

    <!-- Selected Components -->
    <div id="selectedComponentsList" class="mb-4">
        @if (Model.SelectedComponents != null && Model.SelectedComponents.Any())
        {
            foreach (var component in Model.SelectedComponents)
            {
                <div class="card mb-2">
                    <div class="card-body p-2">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center mb-1">
                                    @if (component.Type == "ACCOMMODATIE")
                                    {
                                        <i class="bi bi-building text-teal me-2"></i>
                                    }
                                    else if (component.Type == "VERVOER")
                                    {
                                        <i class="bi bi-airplane text-teal me-2"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-calendar-event text-teal me-2"></i>
                                    }
                                    <span class="badge bg-secondary small">@component.Type</span>
                                </div>
                                <h6 class="mb-0 small">@component.Name</h6>
                                <p class="text-muted small mb-0">@component.Details</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted small text-center py-4">
                Nog geen componenten toegevoegd
            </p>
        }
    </div>

    <!-- Totaalprijs -->
    <div class="border-top pt-3">
        <div class="mb-2">
            <h6 class="fw-bold mb-3">Totaalprijs</h6>
            @* <p class="text-muted small mb-2">Based on all components</p> *@
        </div>
        <h3 class="text-teal fw-bold mb-1">â‚¬<span id="totalPrice">@Model.TotalPrice.ToString("N2")</span></h3>
        <p class="text-muted small mb-3">Inclusief belastingen en toeslagen.</p>
        
        <button class="btn btn-teal text-white w-100">
            Offerte opslaan
        </button>
    </div>
</div>

<style>
    .text-teal {
        color: #14b8a6 !important;
    }
    .btn-teal {
        background-color: #14b8a6;
        border-color: #14b8a6;
    }
    .btn-teal:hover {
        background-color: #0d9488;
        border-color: #0d9488;
    }
</style>
