@model Netmatch_opdracht.Models.ReisOverzichtViewModel

@{
    ViewData["Title"] = "Reis Overzicht";
}

<div class="container mt-4">
    <h1 class="display-4 mb-4">
        <i class="bi bi-airplane-fill text-primary"></i> Reis Overzicht
    </h1>

    <!-- Accommodation Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-building"></i> Accommodatie</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.AccommodationImageUrl))
                    {
                        <img src="@Model.AccommodationImageUrl" class="img-fluid rounded" alt="@Model.AccommodationName" 
                             onerror="this.src='https://via.placeholder.com/400x300?text=Hotel'">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/400x300?text=Hotel" class="img-fluid rounded" alt="Hotel">
                    }
                </div>
                <div class="col-md-8">
                    <h3>@Model.AccommodationName</h3>
                    <hr>
                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-people-fill fs-4 text-primary me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Gasten</small>
                                    <strong>@Model.AccommodationGuests</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-moon-stars-fill fs-4 text-primary me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Nachten</small>
                                    <strong>@Model.AccommodationNights</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-tag-fill"></i> Prijs: <strong>@Model.AccommodationPrice</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transport Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-airplane"></i> Transport</h4>
        </div>
        <div class="card-body">
            @if (Model.Transports != null && Model.Transports.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-signpost-2"></i> Route</th>
                                <th><i class="bi bi-calendar-event"></i> Datum</th>
                                <th><i class="bi bi-clock"></i> Tijd</th>
                                <th class="text-end"><i class="bi bi-cash"></i> Prijs</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transport in Model.Transports)
                            {
                                <tr>
                                    <td><strong>@transport.Route</strong></td>
                                    <td>@transport.Date</td>
                                    <td>@transport.Time</td>
                                    <td class="text-end">@transport.Price</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> Geen transportopties beschikbaar
                </div>
            }
        </div>
    </div>

    <!-- Price Summary Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-calculator"></i> Prijsoverzicht</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8 offset-md-4">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td><strong>Subtotaal:</strong></td>
                                <td class="text-end">@Model.Subtotal</td>
                            </tr>
                            <tr>
                                <td><strong>Belastingen (10%):</strong></td>
                                <td class="text-end">@Model.Taxes</td>
                            </tr>
                            <tr class="table-primary">
                                <td><strong class="fs-5">Totaal:</strong></td>
                                <td class="text-end"><strong class="fs-5">@Model.Total</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-between mb-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Terug naar Home
        </a>
        <button class="btn btn-primary" disabled>
            <i class="bi bi-bookmark-check"></i> Boek Deze Reis
        </button>
    </div>

    <!-- Demo Info -->
    <div class="alert alert-light border">
        <h6><i class="bi bi-info-circle-fill text-info"></i> Clean Architecture Demo</h6>
        <small class="text-muted">
            Deze pagina demonstreert:
            <ul class="mb-0">
                <li>Service laag met business logic (10% belasting berekening)</li>
                <li>DTO naar ViewModel mapping in de controller</li>
                <li>Automatische berekening van totalen</li>
            </ul>
        </small>
    </div>
</div>

